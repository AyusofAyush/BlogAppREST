<% include partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>" style="width:80%;height:60%;"><br>
            </div>
            <div class="content">
                <span><%= blog.created.toDateString() %></span> 
                <!-- we can do it by moment js for date  -->
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            <a href="/blogs/<%= blog._id %>/edit" class="ui basic yellow button">Edit Post</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" >
                <button class="ui red basic button">Delete Blog</button>
            </form>
            </div>
        </div>
    </div>
<% include partials/footer %>